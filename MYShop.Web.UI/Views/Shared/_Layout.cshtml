                        <li><a href="tel:+989189660086"><i class="fa fa-phone"></i> +989189660086</a></li>
                        <li><a href="mailto:mohammad0ramezani@gmail.com"><i class="fa fa-envelope"></i> mohammad0ramezani@gmail.com</a></li>
                    </ul>
                </div>
               
             <div class="clear"></div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container-fluid">
                <div class="row">
                    
                    <div class="col-mid">
                        <div class="logo">
                            <a href="/">
                                <img src="../images/logo.png" alt="logo">
                                <b> فروشگاه اینترنتی</b>
                            </a>
                        </div>
                   </div>
                    <div>
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                        {
                            <div class="col-mid search_box search">
                                <input name="value" type="text" placeholder="نام کالا،برندو یا دسته مورد نظر خود را جستجو کنید ...">
                                <button type="submit"><i class="fa fa-search"></i></button>
                            </div>
                        }
                        </div>
                 
                        <div class="col-mid shop-menu">
                            <ul>
 
                                <li><a asp-action="Index" asp-controller="Cart">
    @await Component.InvokeAsync("Cart")
    سبد&zwnj;خرید

</a>  </li>
                                
                            </ul>

                        </div>
                   
                 </div>

              
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="mainmenu">
                    <ul>
                        <li><a href="/" class="active">خانه</a></li>
                        <li>
                            <a href="#">فروشگاه<i class="fa fa-angle-down"></i></a>
                            <ul>
                                <li><a href="/">محصولات</a></li>
                                <li><a asp-action="Checkout" asp-controller="Order">پرداخت</a></li>
                                <li><a asp-action="index" asp-controller="Cart">سبدخرید</a></li>
                              
                                @*<li><a href="#">ورود</a></li>*@
                            </ul>
                        </li>
                       
                        <li><a href="#">تماس&zwnj;باما</a></li>
                    </ul>
                </div>

                <div class="clear"></div>
            </div>
        </div><!--/header-bottom-->
    </header>
    @RenderBody()


<footer id="footer">
