@model IEnumerable<MYShop.Domain.Entities.ProductColor>




<p>
    <a asp-action="CreateColor" asp-route-ProductID="@ViewBag.ProductID"  class="btn btn-success">ثبت رنگ جدید</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductColorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductColorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>

            <td>


                <a asp-action="EditPrice" asp-route-Id="@item.ProductColorID" class="btn btn-info">ویرایش</a>
                |
                <a asp-action="Delete" asp-route-Id="@item.ProductID" class="btn btn-danger" onclick="return confirm('از حذف مطمئن هستید؟')">حذف</a>
            </td>
        </tr>
        }
    </tbody>
</table>
