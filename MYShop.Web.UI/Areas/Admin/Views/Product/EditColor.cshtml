@model ProductColor


<form asp-action="EditColor" asp- method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="ProductColorID" />

    <input type="hidden" asp-for="ProductID" />
  
   
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Value"></label>
        <div><span asp-validation-for="Value" class="text-danger"></span></div>
        <input asp-for="Value" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">ذخیره</button>
        <a asp-action="Index" class="btn btn-default">انصراف</a>
    </div>
</form>
